<launch>
  <!-- 底盘和串口节点 -->
  <include file="$(find ros_uart_protocol)/launch/launch_node.launch" />

  <!-- 惯性路径节点 -->
  <node pkg="inertial_nav" type="inertial_path_node" name="inertial_path_node" output="screen">
    <!-- 根据实际话题名调整 -->
    <param name="odom_topic" value="odom" />
    <param name="cmd_vel_topic" value="cmd_vel" />
    <param name="cmd_topic" value="inertial_path/cmd" />

    <!-- 可调参数 -->
    <param name="record_min_dist" value="0.05" />
    <param name="record_min_dtheta_deg" value="3.0" />
    <param name="control_rate" value="20.0" />
    <param name="k_v" value="0.4" />
    <param name="k_w" value="0.1" />
    <param name="v_max" value="0.3" />
    <param name="w_max" value="0.3" />
    <param name="pos_tolerance" value="0.5" />
  </node>
</launch>